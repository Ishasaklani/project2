<% layout("/layouts/boilerplate") %>
<style>
  #filters {
   display:flex;
   flex-wrap: wrap;
   align-items: center;
  }

  .filter{
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p{
    font-size: 0.8rem;

 }

 .tax-info {
   display:none;
 }
  
  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    margin-left: 2rem;
    display: flex;
    align-items: center;
  }


  .active-filter {
    opacity: 1 !important;
    border-bottom: 2px solid #fe424d;
    font-weight: bold;
  }
</style>
